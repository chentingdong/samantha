[
  {
    "command": ["yarn", "-s", "prod"],
    "essential": true,
    "image": "${server_image}",
    "name": "server",
    "portMappings": [
      {
        "containerPort": 4000,
        "hostPort": 4000,
        "protocol": "tcp"
      }
    ],
    "environment": [
      {
        "name": "DATABASE_URL",
        "value": "${DATABASE_URL}"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "samantha-server",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "ecs"
      }
    }
  },
  {
    "command": ["yarn", "-s", "start-prod"],
    "essential": true,
    "image": "${web_image}",
    "name": "web",
    "portMappings": [
      {
        "containerPort": 2000,
        "hostPort": 2000,
        "protocol": "tcp"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "samantha-web",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "ecs"
      }
    }
  }
]
