[
  {
    "command": [
      "graphql-engine",
      "serve"
    ],
    "essential": true,
    "image": "hasura/graphql-engine:v1.3.1",
    "name": "hasura",
    "cpu": 512,
    "memory": 1024,
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 8080,
        "protocol": "tcp"
      }
    ],
    "environment": [
      {
        "name": "HASURA_GRAPHQL_DATABASE_URL",
        "value": "..."
      },
      {
        "name": "HASURA_GRAPHQL_ENABLE_CONSOLE",
        "value": "true"
      },
      {
        "name": "HASURA_GRAPHQL_ADMIN_SECRET",
        "value": "..."
      },
      {
        "name": "M1_BLOCK_STATE_UPDATE_WEBHOOK_URL",
        "value": "http://localhost:3000/block_state_update"
      },
      {
        "name": "M2_BLOCK_STATE_UPDATE_WEBHOOK_URL",
        "value": "http://localhost:3000/m2_block_state_update"
      },
      {
        "name": "ACTION_BASE_URL",
        "value": "http://localhost:3000"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "samantha-hasura",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "ecs"
      }
    }
  },
  {
    "command": [
      "sh",
      "-c",
      "yarn hasura:migrate && yarn hasura:metadata && yarn start"
    ],
    "essential": true,
    "image": "${server_image}",
    "name": "server",
    "cpu": 512,
    "memory": 1024,
    "portMappings": [
      {
        "containerPort": 3000,
        "hostPort": 3000,
        "protocol": "tcp"
      }
    ],
    "environment": [
      {
        "name": "NODE_ENV",
        "value": "production"
      },
      {
        "name": "HASURA_GRAPHQL_ENDPOINT",
        "value": "http://localhost:8080"
      },
      {
        "name": "HASURA_GRAPHQL_CLI_ENVIRONMENT",
        "value": "default"
      },
      {
        "name": "HASURA_GRAPHQL_SHOW_UPDATE_NOTIFICATION",
        "value": "false"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "samantha-server",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "ecs"
      }
    }
  },
  {
    "command": [
      "yarn",
      "-s",
      "prod"
    ],
    "essential": true,
    "image": "${admin_image}",
    "name": "admin",
    "cpu": 512,
    "memory": 1024,
    "portMappings": [
      {
        "containerPort": 3030,
        "hostPort": 3030,
        "protocol": "tcp"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "samantha-admin",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "ecs"
      }
    }
  },
  {
    "command": [
      "yarn",
      "-s",
      "start:prod"
    ],
    "essential": true,
    "image": "${web_image}",
    "name": "web",
    "cpu": 512,
    "memory": 1024,
    "portMappings": [
      {
        "containerPort": 2000,
        "hostPort": 2000,
        "protocol": "tcp"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "samantha-web",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "ecs"
      }
    }
  }
]