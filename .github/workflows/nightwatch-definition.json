{
  "containerDefinitions": [
    {
      "command": ["yarn", "-s", "test:e2e"],
      "essential": true,
      "image": "${nightwatch_image}",
      "name": "nightwatch",
      "cpu": 256,
      "memory": 512,
      "portMappings": [
        {
          "containerPort": 2000,
          "hostPort": 2000,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "samantha-dev",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "family": "samantha",
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::079056339674:role/ecsTaskExecutionRole",
  "cpu": "512",
  "memory": "1024"
}
