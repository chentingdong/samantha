{
  "name": "my-nexus-project",
  "license": "UNLICENSED",
  "main": "./src/api/app.js",
  "dependencies": {
    "@sentry/node": "5.17.0",
    "cors": "^2.8.5",
    "nexus": "^0.23.0",
    "nexus-plugin-jwt-auth": "^1.1.1",
    "nexus-plugin-prisma": "^0.9.0",
    "nexus-plugin-shield": "^0.1.4"
  },
  "scripts": {
    "format": "npx prettier --write './**/*.{ts,md}'",
    "dev": "nexus dev",
    "build": "nexus build",
    "start": "node .nexus/build",
    "test": "jest --passWithNoTests",
    "db-save": "yarn prisma migrate save --experimental",
    "db-up": "yarn prisma migrate up --experimental --create-db --auto-approve",
    "prisma-generate": "yarn prisma generate",
    "db-seed": "yarn ts-node prisma/seed.ts",
    "prod": "yarn run db-up && yarn run db-seed && yarn run dev"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@types/cors": "^2.8.6",
    "@types/jest": "^25.2.3",
    "@types/uuid": "^8.0.0",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link-http": "^1.5.17",
    "babel-jest": "^26.0.1",
    "graphql-tag": "^2.10.3",
    "jest": "^26.0.1",
    "node-fetch": "^2.6.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5"
  }
}
