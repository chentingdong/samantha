{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "env": {"SLS_DEBUG": "*"},
      "program": "${workspaceRoot}/node_modules/.bin/sls",
      "args": [
        "offline",
        "start",
        "--skipCacheInvalidation",
        "--verbose"
      ]
    },
    {
      "name": "Serverless packaging",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "env": {"SLS_DEBUG": "*"},
      "program": "${workspaceRoot}/node_modules/.bin/sls",
      "args": [
        "package",
        "--verbose"
      ]
    }    
  ]
}