{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["esnext"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": "./",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "esnext",
    "outDir": ".build",
    "module": "commonjs"
  },
  "include": ["src", "ormconfig.js", "ormconfig.js"],
  "exclude": [
    "node_modules",
    ".serverless",
    ".webpack",
    "_warmup",
    ".vscode"
  ]
}
