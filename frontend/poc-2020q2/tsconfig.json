{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noResolve": false,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es6",
    "jsx": "react",
    "lib": ["es5", "es6", "dom"]
  },
  "exclude": ["./node_modules/**/*"],
  "include": ["./src/**/*"],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": ["./src/**/*"]
  }
}
