{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "es6",
    "moduleResolution": "node",
    "noResolve": false,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es6",
    "jsx": "react",
    "tsx": "react",
    "esModuleInterop": true,
    "lib": ["es6", "dom"],
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "inlineSources": true,
    "sourceRoot": "/",
    "paths": {
      "*": ["src/*", "tests/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["./node_modules/**/*"],
  "include": ["./src/**/*"],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": ["./src/**/*"]
  }
}
